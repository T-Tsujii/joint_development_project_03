<div class="container text-center padding">
<h1>タスク一覧</h1>
<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    </thead>
<tbody>
<% @tasks.each do |task| %>
    <tr>
    <td>
        <span><%= link_to task.title, task_path(task) , class:"" %></span>
    </td>
    <td>
        <%= link_to "詳細", task_path(task) , class:"btn btn-outline-primary btn-sm mx-2 px-3" %>
        <%= link_to "編集", edit_task_path(task), class:"btn btn-outline-primary btn-sm mx-2 px-3" %>
        <%= link_to "削除", task_path(task), method: :delete, data: {confirm: "削除しますか？"}, class:"btn btn-secondary btn-sm mx-2 px-3"  %>
    </td>
    </tr>
<% end %>
</tbody>
</table>
</div>