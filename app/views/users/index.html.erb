<h1>ユーザー 一覧</h1>

<table class = "table">
  <% @users.each do |user| %>
  <tr>
    <td class = "w-100"><%= user.name %></td>
    <td><%= link_to "詳細", user_path(user.id), class: "btn btn-primary" %></td>
    <td><%= link_to "編集", edit_user_path(user.id), method: :get, class: "btn btn-success" %></td>
    <td><%= link_to "削除", user_path(user.id), method: :delete, data: {confirm: "削除しますか?"}, class: "btn btn-danger" %></td>
  </tr>
  <% end %>
</table>
